{
  "version": 2,
  "builds": [
    {
      "src": "my-profile-app/backend/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "my-profile-app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "my-profile-app/backend/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "my-profile-app/frontend/build/$1"
    }
  ]
}